<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/weather_app_default_bg_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:indeterminate="true" />

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginEnd="@dimen/weather_app_horizontal_margin"
            android:layout_marginStart="@dimen/weather_app_horizontal_margin"
            android:layout_marginTop="@dimen/weather_app_vertical_margin"
            android:layout_marginBottom="@dimen/weather_app_vertical_margin">
        </FrameLayout>

    </LinearLayout>

</layout>